<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="53dp"
            android:fontFamily="@font/montserrat"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="474dp"
            android:fontFamily="@font/montserrat"
            android:text="Beginning in"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="366dp"
            android:fontFamily="@font/montserrat"
            android:text="Duration of next work out"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/homeCardSummary"
            android:layout_width="wrap_content"
            android:layout_height="157dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="126dp"
            android:layout_marginEnd="33dp"
            app:cardBackgroundColor="#6400E5"
            app:cardCornerRadius="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/montserrat"
                android:text="Calories Remaining"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:text="Calorie Goal"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/montserrat"
                android:text="Calories Consumed"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/montserrat"
                android:text="Calories Burned"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/calorieGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="10dp"
                android:text="1800"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/caloriesConsumed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="40dp"
                android:text="850"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/caloriesBurned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="70dp"
                android:text="150"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/caloriesRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="100dp"
                android:text="1050"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/btnEditCalorieGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_mode_edit_black_24dp"
                android:clickable="true" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/homeCardSummary"
            android:layout_alignParentStart="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="139dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Start Workout"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnAddFood"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/homeCardSummary"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="139dp"
            android:layout_marginEnd="81dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Add Food Item"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:text="Ready to start a workout?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat" />

        <androidx.cardview.widget.CardView
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_below="@+id/homeCardSummary"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="130dp"
            app:cardCornerRadius="30dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/purple_border">

                <TextView
                    android:id="@+id/timeDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat"
                    android:text="30 min"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/homeCardSummary"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="120dp"
            app:cardCornerRadius="30dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/purple_border">

                <TextView
                    android:id="@+id/timeUntilNextWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat"
                    android:text="1:35:24"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        />

    </RelativeLayout>

</FrameLayout>